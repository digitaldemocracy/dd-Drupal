<div class="dd-subscribe-plan">
  <h1>{{ title }}</h1>
  <div class="plans">
    <h3>Available Premium Membership Plans</h3>
    <ul class="subscription-plans">
    {% for plan in items.plans %}
      <li>{{ plan.name }}</li>
      <ul class="plan">
        <li class="plan-item">Price: ${{ plan.price }} for {{ plan.duration }} days</li>
        <li class="plan-item"><p>{{ plan.description|raw }}</p></li>
      </ul>
    {% endfor %}
    </ul>
  </div>
  <div class="form">
  {{ form }}
  </div>
</div>
{{ attach_library('dd/dd-payment-system-subscribe') }}
