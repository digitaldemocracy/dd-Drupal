<div class="views-row qitem">
  <div class="bank-clip clearfix" data-tag="{{ elements.tags }}" data-clip-id="{{ elements.clip_id }}">
    <div class="drag-handler"></div>
    <div class="video-item">
      <div class='cp-video'>
        <a href='{{ elements.url }}'><img src='{{ elements.source_thumbnail }}'></a>
      </div>
      <div class="cp-video-details">
        <div class='cp-video-title'><a href="{{ elements.url }}">{{ elements.title_clip }}</a></div>
      </div>
      <div class='cp-video-op'>
        <a href='{{ elements.url }}' class='cb-play-video'></a>
        <a href='{{ elements.edit_url }}' class='cb-edit-video'></a>
        <a href='{{ elements.cut_url }}' class='cb-cut-video'></a>
        <a href='{{ elements.anno_url }}' class='cb-annotate-video'></a>
        <a class='clip_delete' href='{{ elements.delete_url }}'></a>
      </div>
      <div class='cp-video-size'>
        <span class="size">SIZE: {{ elements.exact_file_size }}</span>
      </div>
    </div>
    <div class="cp-video-close"></div>
  </div>
</div>
