{# Template for the state homepages.
   To override this for individual states create a template name 'page--front--state--[YOURSTATEID].html.twig
#}

{% extends "page.html.twig" %}


{% block banner %}
  {{ attach_library('dd/homepage') }}
  <div class="homepage-video" id="homepage-video"></div>
{% endblock %}

{% block body %}

  {% block scrollbar %}
  {% if page.states_scrollbar %}
    <div id = "states-scroll-bar">
      <div class = "layout-center">{{ page.states_scrollbar }}</div>
    </div>
    {% endif %}
  {% endblock %}

  <div class="layout-center">

  {% block innercontent %}

    {% if page.highlighted %}
      <div class = "layout-3col__full">
        {{ page.highlighted }}
      </div>
    {% endif %}

    {% if page.home_top_content %}
      <div class = "layout-3col__full">
        {{ page.home_top_content }}
      </div>
    {% endif %}
  {% endblock %}

    <div class="layout-2-equal-cols">

      {# Decide on layout classes by checking if sidebars have content. #}
      {% if (page.home_content_right) %}
        {% set home_content_left_class  = 'layout-2-equal-cols__left' %}
        {% set home_content_right_class = 'layout-2-equal-cols__right' %}
      {% else %}
        {% set home_content_left_class  = 'layout-3col__full' %}
        {% set home_content_right_class = '' %}
      {% endif %}

    {% if page.home_content_left %}
      <section class="{{ home_content_left_class }}" role="main">
        {{ page.home_content_left }}
      </section>
    {% endif %}


    {% if page.home_content_right %}
      <section class = "{{ home_content_right_class }}">
        <div class = "region__inner-wrapper">
          {{ page.home_content_right }}
        </div>
      </section>
    {% endif %}

  </div>{# Ends Layout-2-equal-cols #}

  <div class = "layout-3col homepage-triptych">
    {% if page.home_triptych_first %}
      <div class = "triptych-first layout-3col__col-1">
        {{ page.home_triptych_first }}
      </div>
    {% endif %}
    {% if page.home_triptych_middle %}
      <div class = "triptych-middle layout-3col__col-2">
        {{ page.home_triptych_middle }}
      </div>
    {% endif %}
    {% if page.home_triptych_last %}
      <div class = "triptych-last layout-3col__col-3">
        {{ page.home_triptych_last }}
      </div>
    {% endif %}
  </div>

  </div>{# /.layout-center #}

{% endblock %}
