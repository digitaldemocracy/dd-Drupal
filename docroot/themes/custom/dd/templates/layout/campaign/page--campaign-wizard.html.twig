{% extends "page.html.twig" %}

{% block body %}
  {% block scrollbar %}
    {# Intentionally left empty. Used in base node template and home templates #}
  {% endblock %}
  <div class="layout-center">
  <div class="layout--20-80">

    {# Decide on layout classes by checking if sidebars have content. #}
    {% if (page.sidebar_first) %}
      {% set content_class        = 'layout--20-80__main' %}
      {% set sidebar_first_class  = 'layout--20-80__sidebar' %}
      {% set sidebar_second_class = '' %}
    {% else %}
      {% set content_class        = 'layout-3col__full' %}
      {% set sidebar_first_class  = '' %}
      {% set sidebar_second_class = '' %}
    {% endif %}


    {% block sidebars %}

      {% if page.sidebar_first %}
        <aside class="{{ sidebar_first_class }}" role="complementary">
          {{ page.sidebar_first }}
        </aside>
      {% endif %}
    {% endblock %}

    <main class="{{ content_class }}" role="main">

      {{ page.highlighted }}
      {{ page.breadcrumb }}
      <a href="#skip-link" class="visually-hidden visually-hidden--focusable" id="main-content">Back to top</a>{# link target is in html.html.twig #}
      {{ page.title }}
      {{ page.help }}
      {{ page.content_top }}
      {{ page.content }}

    </main>
  </div>
  </div>{# /.layout-center #}
{% endblock %}
