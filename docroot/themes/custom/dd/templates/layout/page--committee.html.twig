{% extends "page.html.twig" %}

{% block body %}
  {% set page_class = 'page--committee' %}
  <div class="layout-center {{ page_class }}">
  <div class="layout-2-equal-cols">

    {# Decide on layout classes by checking if sidebars have content. #}
    {% if (page.sidebar_second) %}
      {% set content_class        = 'layout-2-equal-cols__left' %}
      {% set sidebar_second_class = 'layout-2-equal-cols__right' %}
    {% else %}
      {% set content_class        = 'layout-3col__full' %}
      {% set sidebar_second_class = '' %}
    {% endif %}

    <section role = "region">
      {{ page.highlighted }}
      {{ page.breadcrumb }}
      <a href="#skip-link" class="visually-hidden visually-hidden--focusable" id="main-content">Back to top</a>{# link target is in html.html.twig #}
      {{ page.title }}
      {{ page.help }}
    </section>

    <main class="{{ content_class }}" role="main">
      <div class = "region__inner-wrapper">
        {{ page.content }}
      </div>
    </main>

    {% if page.sidebar_second %}
      <aside class="{{ sidebar_second_class }}" role="complementary">
        <div class = "region__inner-wrapper">
          {{ page.sidebar_second }}
        </div>
      </aside>
    {% endif %}

  </div>
  </div>{# /.layout-center #}
{% endblock %}